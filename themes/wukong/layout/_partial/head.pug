head
  meta(charset='utf-8')
  meta(
  name='viewport'
  content='width=device-width, initial-scale=1, maximum-scale=1'
  )
  -
    var title = page.title;
    if (is_archive()){
      title = __('archive_a');
      if (is_month()){
        title += ': ' + page.year + '/' + page.month;
      } else if (is_year()){
        title += ': ' + page.year;
      }
    } else if (is_category()){
      title = __('category') + ': ' + page.category;
    } else if (is_tag()){
      title = __('tag') + ': ' + page.tag;
    }
  title #{title || config.title}